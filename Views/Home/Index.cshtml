@model IEnumerable<TurneroMedico.DTOs.TurnoDTO>

@{
    ViewData["Title"] = "Lista de Turnos";
}

<h1>Turnos</h1>

<a href="@Url.Action("Create", "Turno")" class="btn btn-primary mb-3">Agregar Nuevo Turno</a>


@if (Model != null && Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Paciente</th>
                <th>Doctor</th>
                <th>Fecha</th>
                <th>Hora</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var turno in Model)
            {
                <tr>
                    <td>@(turno.PacienteNombre ?? "No asignado")</td>
                    <td>@(turno.DoctorNombre ?? "No asignado")</td>
                    <td>@turno.Fecha.ToShortDateString()</td>
                    <td>@turno.Hora</td>
                    <td>
                        <a href="@Url.Action("Details", "Turnos", new { id = turno.Id })" class="btn btn-info btn-sm">Ver</a>
                        <a href="@Url.Action("Edit", "Turnos", new { id = turno.Id })" class="btn btn-warning btn-sm">Editar</a>
                        <a href="@Url.Action("Delete", "Turnos", new { id = turno.Id })" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay turnos disponibles.</p>
}
