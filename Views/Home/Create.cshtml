@model TurneroMedico.DTOs.TurnoDTO

@{
    ViewData["Title"] = "Crear Turno";
}

<h1>Crear Nuevo Turno</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="PacienteId">Paciente</label>
        <input asp-for="PacienteId" class="form-control" />
        <span asp-validation-for="PacienteId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="DoctorId">Doctor</label>
        <input asp-for="DoctorId" class="form-control" />
        <span asp-validation-for="DoctorId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Fecha">Fecha</label>
        <input asp-for="Fecha" class="form-control" type="date" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Hora">Hora</label>
        <input asp-for="Hora" class="form-control" type="time" />
        <span asp-validation-for="Hora" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
