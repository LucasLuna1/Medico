@model TurneroMedico.DTOs.TurnoDTO

@{
    ViewData["Title"] = "Eliminar Turno";
}

<h1>Eliminar Turno</h1>

<p>¿Estás seguro de que deseas eliminar este turno?</p>

<div>
    <p><strong>Paciente:</strong> @Model.PacienteNombre</p>
    <p><strong>Doctor:</strong> @Model.DoctorNombre</p>
    <p><strong>Fecha:</strong> @Model.Fecha.ToShortDateString()</p>
    <p><strong>Hora:</strong> @Model.Hora</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
